{
  "name": "pn-local-validator",
  "version": "0.0.0",
  "description": "A system that emulates some features of Piattaforma Notifiche platform.",
  "main": "dist/main.js",
  "scripts": {
    "generate": "shx rm -rf ./src/generated/definitions && shx mkdir -p ./src/generated/definitions && gen-api-models --api-spec ./openapi/index.yaml --no-strict --out-dir ./src/generated/definitions",
    "clean": "tsc --build --clean",
    "compile": "tsc",
    "lint": "eslint src",
    "lint:fix": "eslint --fix src",
    "prettify": "prettier --write \"./**/*.ts\"",
    "start": "pnpm compile && node -r dotenv/config dist/main.js dotenv_config_path=.env.default",
    "test": "DOTENV_CONFIG_PATH=./.env.default jest --setupFiles dotenv/config -i",
    "prepare": "husky install"
  },
  "keywords": [],
  "author": "",
  "license": "SEE LICENSE IN LICENSE",
  "devDependencies": {
    "@pagopa/eslint-config": "^3.0.0",
    "@pagopa/openapi-codegen-ts": "^11.2.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.6",
    "@types/node": "^18.6.3",
    "dotenv": "^16.0.1",
    "husky": "^8.0.1",
    "eslint": "^8.21.0",
    "jest": "^28.1.3",
    "prettier": "^2.7.1",
    "shx": "^0.3.4",
    "ts-jest": "^28.0.7",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@pagopa/ts-commons": "^10.8.0",
    "express": "^4.18.1",
    "fp-ts": "^2.12.2",
    "io-ts": "^2.2.17",
    "io-ts-types": "^0.5.16",
    "monocle-ts": "^2.3.13",
    "newtype-ts": "^0.3.5",
    "tslog": "^3.3.3"
  }
}
