{
  "env": {
    "es2021": true,
    "node": true
  },
  "ignorePatterns": ["Dangerfile.js", "**/__tests__/*"],
  "extends": ["@pagopa/eslint-config/recommended"],
  "overrides": [
    {
      "files": ["**/*.spec.ts"],
      "rules": {
        "functional/no-let": "off"
      }
    }
  ],
  "rules": {
    "prettier/prettier": ["off", { "singleQuote": true }]
  }
}